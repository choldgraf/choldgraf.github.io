":{"order":[],"data":{}}},"footer":{"navigation":{"prev":{"title":"How to update Sphinx options during the build","url":"/blog/2022/sphinx-update-config","group":"2022"},"next":{"title":"What do people think about rST?","url":"/blog/2020/2020-01-22-rst-thoughts","group":"2020"}}},"domain":"http://localhost:3000"}